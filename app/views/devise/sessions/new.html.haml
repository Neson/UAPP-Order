.ui.vertical.center.wrapper.devise.login{style: "height: 100vh; position: absolute; top: 0;"}
  .ui.vertical.center
    .ui.fluid.form.segment.login.box
      - if !!request.fullpath.match(/^\/user/)
        %h3.ui.header 台科大學生嗎？
        = render 'partials/facebook_login_button'
      - else
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .ui.form
            .field
              = f.label :username
              .ui.left.labeled.icon.input
                = f.text_field :username, autofocus: true
                %i.user.icon
                .ui.corner.label
                  %i.icon.asterisk
            .field
              = f.label :password
              .ui.left.labeled.icon.input
                = f.password_field :password, autocomplete: "off"
                %i.lock.icon
                .ui.corner.label
                  %i.icon.asterisk
            - if devise_mapping.rememberable?
              .field
                .ui.toggle.checkbox
                  = f.check_box :remember_me
                  = f.label :remember_me

            = f.submit "Log in", class: "ui blue submit button"

:css
  .top.menu .login.button { display: none; }
