.container.staff
  %h1= "#{@user.name} 的資料"
  %table.ui.table.segment.sortable
    %tbody
      %tr
        %td 姓名
        %td= @user.name
      %tr
        %td Email
        %td= @user.email
      %tr
        %td Facebook
        %td= link_to @user.fbid, "https://facebook.com/#{@user.fbid}"
      %tr
        %td SID
        %td= @user.student_id
      %tr
        %td 性別
        %td= @user.gender
      %tr
        %td 系所
        %td= @user.department
