.container.staff.action
  %h1 客服問題
  .ui.vertical.center.wrapper{style: "min-height: 83vh; top: 0;"}
    .ui.vertical.center
      .ui.large.segment.box
        .h3
          %i.circular.info.icon
        %br
        請輸入學號或感應學生證
        .ui.section.divider
        %form{"accept-charset" => "UTF-8", :action => "/staff/issue/show", :method => "get"}
          .ui.left.labeled.icon.sid-c.input
            %input#input-sid.sid{:autocomplete => "off", :autofocus => "autofocus", :name => "sid", :placeholder => "SID", :type => "text"}
            %i.angle.right.icon
            / .ui.corner.label
            / .ui.red.pointing.above.ui.label.error-label 不合法
          %input.ui.green.submit.button{:name => "commit", :type => "submit", :value => "OK"}
        .ui.horizontal.divider
          %i.icon 驚
          / %i.lock.icon

:javascript
  setTimeout(function() {
    $('.toast-message .action').remove();
  }, 10000);

